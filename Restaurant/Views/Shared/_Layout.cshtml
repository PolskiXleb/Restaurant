<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Кодзима</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @using (Html.BeginForm("Menu", "Client"))
    {
        <img src="~/Content/logo.png" class="img-logo" />
    }


    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Кодзима", "Menu", "Client", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink("Меню ресторана", "Menu", "Client")</li>
                    <li>@Html.ActionLink("Резервация столика", "PickDate", "Client")</li>
                    <li>@Html.ActionLink("О ресторане", "About", "Client")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()       
               
        <footer>
            <div style="clear:both;">
                <br />
                    <hr />
                    <p>
                        &copy; @DateTime.Now.Year – Ресторан "Кодзима"
                    </p>
            </div>
        </footer>
            
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/order.js"></script>
</body>
</html>
