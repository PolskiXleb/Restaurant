@model IEnumerable<Restaurant.Models.Order>

@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Заказы</h2>

<table class="table">
    <tr>
        <th>
            <b> Имя клиента </b>
        </th>
        <th>
            <b> Сумма заказа </b>
        </th>
        <th>
            <b> Время принятия заказа </b>
        </th>
        <th>
            <b> Статус </b>
        </th>
        <th>
            <b> Номер столика </b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @if (item.Ongoing == true)
            {
                @: Открыт
            }
            else
            {
                @: Закрыт
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Table.Id)
        </td>
        <td>
            @Html.ActionLink("Состав заказа", "DetailsOrder", new { id=item.Id }, new { @class = "btn btn-default" }) 
        </td>
    </tr>
}

</table>
