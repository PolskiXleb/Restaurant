@using Restaurant.Models
@model Order
@{
    ViewBag.Title = "Content";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-9">

        <p class="text-big btn-nice">Клиент:  @Model.ClientName</p>
        <p class="text-nice btn-nice">Столик: @Model.TableId</p>
        <p class="text-nice btn-nice">Заказ открыт с: @Model.Time.Hours:@Model.Time.Minutes:@Model.Time.Seconds</p>
    
        <div class="paycheck">
            @foreach (OrderContent oc in Model.OrderContents)
            {
                <p class="text-paycheck btn-nice">
                    @oc.Dish.Name -- @oc.Dish.Cost ₽
                </p>
            }
            <p></p>
            <p class="dish-summary btn-nice">Итого: @Model.Summary ₽</p>
        </div>

    </div>
</div>

<div>

    



</div>

@Html.ActionLink("Заказать блюдо", "Menu", new { orderId = Model.Id }, new { @class = "btn btn-info" })
@Html.ActionLink("Закрыть заказ", "Close", new { orderId = Model.Id }, new { @class = "btn btn-info" })
@Html.ActionLink("К списку клиентов", "List", null, new { @class = "btn btn-info" })





